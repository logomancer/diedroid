<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.logomancy.diedroid"
      android:versionName="1.4.1" android:versionCode="10">
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:theme="@style/Theme.AppCompat" android:allowBackup="false">
        <activity android:name=".DieDroidMain"
                  android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:screenOrientation="portrait" android:name="RollActivity"></activity>
<activity android:screenOrientation="portrait" android:name="PoolActivity"></activity>
<activity android:screenOrientation="portrait" android:name="StatsActivity"></activity>
<activity android:screenOrientation="portrait" android:name="PIOActivity"></activity>
<meta-data android:value="@string/aboutEmail" android:name="org.openintents.metadata.EMAIL"></meta-data>
<meta-data android:name="org.openintents.metadata.WEBSITE_URL" android:value="@string/urlWebsite"></meta-data>
<meta-data android:value="@string/aboutSiteLabel" android:name="org.openintents.metadata.WEBSITE_LABEL"></meta-data>
<meta-data android:value="@string/aboutCopyright" android:name="org.openintents.metadata.COPYRIGHT"></meta-data>
<meta-data android:name="org.openintents.metadata.TRANSLATORS" android:resource="@array/aboutTranslators"></meta-data>
<meta-data android:name="org.openintents.metadata.AUTHORS" android:resource="@array/aboutAuthors"></meta-data>
<meta-data android:name="org.openintents.metadata.LICENSE" android:resource="@raw/diedroid_license"></meta-data>

</application>
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="19"/>
</manifest> 